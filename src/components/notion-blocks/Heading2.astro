---
import * as interfaces from '../../lib/interfaces.ts'
import { buildHeadingId } from '../../lib/blog-helpers.ts'
import RichText from './RichText.astro'
import NotionBlocks from '../NotionBlocks.astro'

export interface Props {
  block: interfaces.Block
  headings: interfaces.Block[]
}

const { block, headings } = Astro.props
const id = block.Heading2 ? buildHeadingId(block.Heading2) : ''
---

{block.Heading2 && block.Heading2.IsToggleable ? (
  <details class="toggle">
    <summary>
      <span class="toggle-icon">▶</span>
      <h2 id={id} class="heading-link">
        {block.Heading2.RichTexts.map((richText: interfaces.RichText) => (
          <RichText richText={richText} />
        ))}
      </h2>
    </summary>
    <div class="toggle-content">
      {block.Heading2.Children && (
        <NotionBlocks blocks={block.Heading2.Children} headings={headings} isRoot={false} level={3} />
      )}
    </div>
  </details>
) : block.Heading2 ? (
  <h2 id={id} class="heading-link">
    <a href={`#${id}`}>
      {block.Heading2.RichTexts.map((richText: interfaces.RichText) => (
        <RichText richText={richText} />
      ))}
    </a>
  </h2>
) : null}

<style>
  h2.heading-link {
    margin: 1.3em 0;
    color: var(--text-color);
    font-size: 1.5rem;
    font-weight: var(--font-semibold);
    line-height: 1.3;
    display: block;
    width: 100%;
  }
  h2.heading-link a {
    color: inherit;
    text-decoration: none;
  }
  h2.heading-link a:hover {
    color: var(--primary-color);
    text-decoration: none;
  }
  .toggle {
    margin: 1.6rem 0;
  }
  .toggle > summary {
    cursor: default;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.5em;
    padding: 0.5em 0;
  }
  .toggle > summary::-webkit-details-marker {
    display: none !important;
  }
  .toggle > summary::marker {
    display: none !important;
  }
  .toggle-icon {
    display: inline-block;
    font-size: 0.8em;
    color: var(--text-color);
    transition: transform 0.2s;
    user-select: none;
    cursor: pointer;
    line-height: 1;
    flex-shrink: 0;
    align-self: center;
    vertical-align: middle;
  }
  .toggle[open] .toggle-icon {
    transform: rotate(90deg);
  }
  .toggle > summary h2.heading-link {
    margin: 0;
    font-size: inherit;
    font-weight: inherit;
    pointer-events: none;
    cursor: default;
    line-height: 1;
    display: flex;
    align-items: center;
    vertical-align: middle;
  }
  .toggle > summary h2.heading-link a {
    pointer-events: none;
  }
  .toggle-content {
    margin-left: 1em; //和小三角对齐的间距
    padding-top: 0.5em;
    padding-left: 0.5em;
  }
  @media (max-width: 640px) {
    h2.heading-link {
      font-size: 1.3rem;
    }
    .toggle {
      margin: 1.2rem 0 0;
    }
  }
</style>
