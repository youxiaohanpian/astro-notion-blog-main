---
import * as interfaces from '../../lib/interfaces'
import { filePath } from '../../lib/blog-helpers'
import Caption from './Caption.astro'

export interface Props {
  block: interfaces.Block
}

const { block } = Astro.props

let url: URL | undefined
try {
  const urlString = block.File?.External?.Url || block.File?.File?.Url
  if (!urlString || urlString.trim() === '') {
    throw new Error('Empty file URL')
  }
  url = new URL(urlString)
} catch (err) {
  console.error(`Invalid file URL. error: ${err}`)
  url = undefined
}

const filename = url ? decodeURIComponent(url.pathname.split('/').slice(-1)[0]) : 'file'
---

<div class="file">
  <div>
    {
      url && block.File && (
        <a
          href={block.File.External ? url.toString() : filePath(url)}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src="https://www.notion.so/icons/document_gray.svg"
            alt="File icon in a file block"
          />{' '}
          {filename}
        </a>
      )
    }
  </div>
  {block.File && <Caption richTexts={block.File.Caption} />}
</div>

<style>
  .file {
  }

  .file a {
    display: block;
    padding: 0.5rem 0.2rem 0.4rem;
    border-radius: var(--border-radius);
    color: var(--text-color);
    font-weight: 500;
    line-height: 1.4rem;
  }
  .file a:hover {
    background-color: #eee;
  }

  .file a img {
    width: 1.3rem;
    height: 1.3rem;
    vertical-align: sub;
  }
</style>
